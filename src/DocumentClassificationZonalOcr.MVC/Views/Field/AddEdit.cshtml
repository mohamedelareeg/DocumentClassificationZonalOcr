@model DocumentClassificationZonalOcr.Shared.Dtos.FieldDto

@{
    ViewData["Title"] = Model.Id == 0 ? "Add Field" : "Edit Field";
    var fieldTypeList = new SelectList(Enum.GetValues(typeof(DocumentClassificationZonalOcr.Shared.Enums.FieldType)).Cast<DocumentClassificationZonalOcr.Shared.Enums.FieldType>());
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEdit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FormId" value="@ViewData["FormId"]" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" class="form-control" asp-items="fieldTypeList">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" asp-route-formId="@Model.FormId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
